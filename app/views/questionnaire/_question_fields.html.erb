<div class="nested-fields">
  <%= f.label :text %>
  <%= f.text_area :text %>
  <div>
    <%= link_to "Remove", '#', class: "remove_fields" %>
  </div>
  <div>
    <h3>Options</h3>
    <% f.fields_for :question_options do |question_options_form| %>
      <%= render "question_option_fields", f: question_options_form %>
    <% end %>
  </div>
  <%= link_to_add_fields "Add Option", f, :question_options %>
</div>
