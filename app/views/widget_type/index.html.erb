<div class="container">
  <div class="row">
    <div class="cols-md-auto">
      <h1>WidgetType#index</h1>
    </div>
  </div>
  <div class="row">
    <div class="cols-md-auto">
      <ul>
        <% @widget_types.sort_by { | t| t.name  }.each do |type| %>
          <li>
            <%= type.name %> <%= link_to("Edit", edit_widget_type_path(type)) %>  <%= link_to("Delete", delete_widget_type_path(type)) %>
          </li>

        <% end %>
      </ul>
    </div>
  </div>
  <div class="row">
    <div class="cols-md-auto">
      <%= link_to("Add Widget Type", widget_type_new_path) %>
    </div>
  </div>
</div>
