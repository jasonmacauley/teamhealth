<%= form_with url: questions_path, model: @question do |f| %>
  <div>
    <%= f.label :text %><br>
    <%= f.text_area(:text, :value => @question.text) %>
  </div>
  <div>
    <%= f.label :label %><br>
    <%= f.text_field(:label, :value => @question.label) %>
  </div>
  <div>
    <%= f.label :question_type %><br>
    <%= f.select :question_type_id, QuestionType.all.collect { |q| [q.name, q.id] }, include_blank: false %>
  </div>
  <div>
    <%= f.hidden_field :questionnaire_id, :value => @question.questionnaire_id %>
    <%= f.hidden_field :id, :value => @question.id %>
  </div>
  <div>
    <%= f.submit %>
  </div>
<% end %>
